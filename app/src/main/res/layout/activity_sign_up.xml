<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primaryBackground">

    <!-- AppBar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_back"
            android:fontFamily="@font/kangwon_tntnche"
            android:textStyle="bold"
            app:iconTint="@android:color/white"
            android:contentDescription="@string/back_button" />

    </androidx.appcompat.widget.Toolbar>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입"
                android:textSize="40sp"
                android:fontFamily="@font/kangwon_tntnche" />

            <!-- Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp">

                <!-- Name Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"
                    android:textSize="23sp"
                    android:fontFamily="@font/nanumsquare_neo_eb"
                    android:paddingBottom="4dp" />

                <EditText
                    android:id="@+id/full_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/nanumsquare_neo_eb"
                    android:hint="이름"
                    android:padding="12dp"
                    android:textSize="17sp"
                    android:inputType="textPersonName"
                    android:imeOptions="actionDone" />


                <!-- Phone Number Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전화번호"
                    android:textSize="23sp"
                    android:fontFamily="@font/nanumsquare_neo_eb"
                    android:paddingTop="18dp"
                    android:paddingBottom="4dp" />

                <!-- Password Field -->
                <EditText
                    android:id="@+id/phone_number_input"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/nanumsquare_neo_eb"
                    android:hint="010-1234-5678"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:textSize="17sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:fontFamily="@font/nanumsquare_neo_eb"
                    android:textSize="23sp"
                    android:paddingTop="18dp"
                    android:paddingBottom="4dp" />

                <EditText
                    android:id="@+id/password_input"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="비밀번호"
                    android:fontFamily="@font/nanumsquare_neo_eb"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textSize="17sp" />

                <!-- Date of Birth Fields -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생년월일"
                    android:textSize="23sp"
                    android:fontFamily="@font/nanumsquare_neo_eb"
                    android:paddingTop="18dp"
                    android:paddingBottom="4dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/birthYear_input"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_background"
                        android:fontFamily="@font/nanumsquare_neo_eb"
                        android:hint="출생년도"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textAlignment="textStart"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/month_input"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_background"
                        android:fontFamily="@font/nanumsquare_neo_eb"
                        android:hint="월"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textAlignment="textStart"
                        android:textSize="17sp" />

                    <EditText
                        android:id="@+id/day_input"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:background="@drawable/edit_text_background"
                        android:fontFamily="@font/nanumsquare_neo_eb"
                        android:hint="일"
                        android:inputType="number"
                        android:padding="12dp"
                        android:textAlignment="textStart"
                        android:textSize="17sp" />
                </LinearLayout>

                <!-- Checkbox -->
                <LinearLayout
                    android:id="@+id/checkbox_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="18dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless">

                    <CheckBox
                        android:id="@+id/checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/orange"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:checked="false"
                        android:background="?attr/selectableItemBackgroundBorderless" />

                    <TextView
                        android:id="@+id/checkbox_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기관 담당자입니까?"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanumsquare_neo_eb"
                        android:paddingBottom="4dp" />
                </LinearLayout>

                <!-- Sign Up Button -->
                <Button
                    android:id="@+id/sign_up_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/orange"
                    android:text="가입하기"
                    android:textSize="30sp"
                    android:fontFamily="@font/kangwon_tntnche"
                    android:textColor="@color/white"
                    android:layout_marginTop="20dp" />

                <!-- Terms and Conditions -->
                <TextView
                    android:id="@+id/terms_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/kangwon_tntnche"
                    android:gravity="center"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
