<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/back_button" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="강연자 구직"
            android:fontFamily="@font/kangwon_tntnche"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Title Text -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:text="제목"
        android:fontFamily="@font/nanumsquare_neo_eb"
        android:textSize="23sp"
        android:textColor="@android:color/black" />

    <!-- Checkboxes -->
    <LinearLayout
        android:id="@+id/checkbox_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <!-- 청년 참관 가능 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/checkbox_want"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/orange"
                android:scaleX="1.5"
                android:scaleY="1.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_neo_eb"
                android:text="청년 참관 가능"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Title EditText -->
    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/title_text"
        android:layout_marginTop="13dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nanumsquare_neo_eb"
        android:background="@drawable/edit_text_background"
        android:hint="제목을 작성해 주세요. (10자 이내)"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <!-- Image Upload Section -->
    <Button
        android:id="@+id/choose_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_edit_text"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:text="이미지 선택" />

    <!-- Selected Image Preview -->
    <ImageView
        android:id="@+id/selected_image_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/choose_image_button"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:visibility="visible" />

    <!-- 구해요 체크 시 금액 설정 -->
    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_image_view"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:text="금액 | ₩"
        android:fontFamily="@font/nanumsquare_neo_eb"
        android:textSize="23sp"
        android:textColor="@android:color/black" />

    <!-- Price EditText -->
    <EditText
        android:id="@+id/price_edit_text"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/price_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nanumsquare_neo_eb"
        android:background="@drawable/edit_text_background"
        android:hint="금액을 입력해주세요"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <!-- Content Text -->
    <TextView
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/price_edit_text"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:text="내용"
        android:fontFamily="@font/nanumsquare_neo_eb"
        android:textSize="23sp"
        android:textColor="@android:color/black" />

    <!-- Content EditText -->
    <EditText
        android:id="@+id/content_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnSummit"
        android:layout_below="@id/content_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_background"
        android:fontFamily="@font/nanumsquare_neo_eb"
        android:gravity="top"
        android:hint="내용을 100줄 이내로 작성해 주세요."
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSummit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:text="@string/submit_button"
        android:textSize="25sp"
        android:fontFamily="@font/kangwon_tntnche"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/orange"
        android:gravity="center"
        android:padding="10dp"
        android:backgroundTintMode="src_in"/>
</RelativeLayout>
