<?xml version="1.0" encoding="utf-8"?>
<!-- app은 cardView에 대한 app namespace 정의 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4F6"
    tools:context=".Edu.ChatActivity">

    <!-- Custom Appbar Widget -->

    <!-- ToolBar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/skyBlue"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kangwon_tntnche"
            android:gravity="center"
            android:text="@string/seminorTitle"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- 게시글 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- First Message -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/message2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"> <!-- 여기서 오른쪽 정렬을 적용 -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <!-- Right Group: Location and Views -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/msgContent2"
                                android:layout_width="267dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/im_hyemin_bold"
                                android:text="안녕하세요.\n프로그램 교육 받고싶어서 문의 드립니다!"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Second Message -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/message1"
                    android:layout_width="306dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="#BADCE9"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"> <!-- 여기서 오른쪽 정렬을 적용 -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <!-- Left Group: Location and Views -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/msgContent1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/im_hyemin_bold"
                                android:text="안녕하세요!\n장소는 OOO이고, 가능하신 시간대랑 참여인원 말씀해주시면 맞춰서 수업 준비하겠습니다!"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- First Message -->
            <androidx.cardview.widget.CardView
                android:id="@+id/message3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"> <!-- 여기서 오른쪽 정렬을 적용 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Right Group: Location and Views -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/msgContent3"
                            android:layout_width="267dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/im_hyemin_bold"
                            android:text="저희 수업 인원은 XX명이구요, 다음주 금요일 가능합니다."
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        </LinearLayout>
    </ScrollView>


    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"
        android:backgroundTint="@color/skyBlue"
        android:contentDescription="@string/buttonDescription"
        android:elevation="4dp"
        android:src="@drawable/plus"
        app:fabSize="normal"
        app:tint="@android:color/white"/>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="8dp">

        <!-- First Menu Item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/study"
                app:tint="@android:color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="교육 받기"
                android:fontFamily="@font/kangwon_tntnche"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <!-- Second Menu Item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/teach"
                android:layout_marginTop="3dp"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강연자 신청"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:fontFamily="@font/kangwon_tntnche"
                android:layout_marginTop="7dp"/>
        </LinearLayout>

        <!-- Third Menu Item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/chat"
                android:layout_marginTop="3dp"
                app:tint="@color/skyBlue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kangwon_tntnche"
                android:text="채팅"
                android:layout_marginTop="3dp"
                android:textColor="@color/skyBlue"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Fourth Menu Item -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/setting"
                android:layout_marginTop="3dp"
                app:tint="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kangwon_tntnche"
                android:text="설정"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
