<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <ImageButton
            android:id="@+id/backs_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_back"
            android:fontFamily="@font/kangwon_tntnche"
            android:textStyle="bold"
            app:iconTint="@android:color/white"
            android:contentDescription="@string/back_button" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kangwon_tntnche"
            android:gravity="center"
            android:text="문의 접수하기"
            android:textColor="#FFFFFF"
            android:textSize="35sp" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Title Text -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:text="제목"
        android:fontFamily="@font/im_hyemin_bold"
        android:textSize="23sp"
        android:textColor="@android:color/black" />

    <!-- Title EditText -->
    <EditText
        android:id="@+id/title_edit_text"
        android:layout_width="395dp"
        android:layout_height="55dp"
        android:layout_below="@id/title_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_background"
        android:hint="제목을 작성해 주세요. (10자 이내)"
        android:fontFamily="@font/im_hyemin_regular"
        android:padding="10dp"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <!-- Checkboxes -->
    <LinearLayout
        android:id="@+id/checkbox_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_edit_text"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        android:orientation="horizontal"/>

    <!-- Content Text -->
    <TextView
        android:id="@+id/content_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkbox_group"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        android:text="내용"
        android:fontFamily="@font/im_hyemin_bold"
        android:textSize="23sp"
        android:textColor="@android:color/black" />

    <!-- Content EditText -->
    <EditText
        android:id="@+id/content_edit_text"
        android:layout_width="388dp"
        android:layout_height="363dp"
        android:layout_below="@id/content_text"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_text_background"
        android:gravity="top"
        android:hint="내용을 100줄 이내로 작성해 주세요."
        android:fontFamily="@font/im_hyemin_regular"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:scrollbars="vertical"
        android:textColor="@android:color/black"
        android:textSize="17sp" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSummit"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/submit_button"
        android:fontFamily="@font/kangwon_tntnche"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/orange"
        android:gravity="center"
        android:padding="10dp"
        android:backgroundTintMode="src_in"/>
</RelativeLayout>
